{
  "imports": {
    "std/": "https://deno.land/std@0.208.0/"
  },
  "tasks": {
    "dev": "deno run --allow-read --allow-write main.ts",
    "test": "deno test --allow-read",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "install": "deno install --allow-read --allow-write -n auronia main.ts",
    "start": "deno run --allow-read --allow-write cli.ts"
  },
  "fmt": {
    "files": {
      "include": ["src/", "tests/"]
    },
    "options": {
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true
    }
  },
  "lint": {
    "files": {
      "include": ["src/", "tests/"]
    }
  },
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "lib": ["deno.window"]
  }
} 