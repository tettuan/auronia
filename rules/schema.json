{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "version": {
      "type": "string"
    },
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string"
          },
          "content": {
            "type": "string"
          },
          "children": {
            "type": "array"
          },
          "level": {
            "type": "number"
          }
        },
        "required": ["type", "content"]
      }
    }
  },
  "required": ["version", "nodes"]
} 